<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/intervalColor"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/fontColor_yellow" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="实名认证"
            android:textColor="@color/fontColor_white"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:background="@color/lineColor"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="真实姓名"
            android:textSize="15sp"
            android:textColor="@color/fontColor_gray"
            android:layout_width="103dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:inputType="text"
            android:background="@null"
            android:textColor="#333333"
            android:textColorHint="@color/fontColor_hint"
            android:hint="请输入姓名"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="身份证号"
            android:textSize="15sp"
            android:textColor="@color/fontColor_gray"
            android:layout_width="103dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edt_identity"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#333333"
            android:background="@null"
            android:maxLines="18"
            android:textColorHint="@color/fontColor_hint"
            android:hint="请输入身份证号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <View
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="手机验证码"
            android:textSize="15sp"
            android:textColor="@color/fontColor_gray"
            android:layout_width="153dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edt_code"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:maxLength="4"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/fontColor_gray"
            android:textColorHint="@color/fontColor_hint"
            android:hint="请输入验证码"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_send"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corners_orange"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:visibility="gone"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="支付密码"
            android:textSize="15sp"
            android:textColor="@color/fontColor_gray"
            android:layout_width="153dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/edt_trade"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:maxLength="11"
            android:inputType="number"
            android:background="@null"
            android:textColor="#333333"
            android:maxLines="6"
            android:textColorHint="@color/fontColor_hint"
            android:hint="请输入支付密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_confirm"
        android:textColor="@color/white"
        android:text="确定"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/corners_btn_yellow"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>

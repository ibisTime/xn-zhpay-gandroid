<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhenghui.zhqb.gift.activity.ShipmentsCancleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/orange" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="取消发货"
            android:textColor="@color/fontColor_white"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:background="@color/intervalColor"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:gravity="center"
                        android:text="收货人"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                    <View
                        android:layout_marginLeft="15dp"
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:gravity="center"
                        android:text="联系电话"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                    <View
                        android:layout_marginLeft="15dp"
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>


                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_gray"
                        android:gravity="center"
                        android:text="买家嘱托"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/txt_name"
                        android:layout_marginLeft="25dp"
                        android:textSize="15sp"
                        android:textColorHint="@color/fontColor_hint"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <View
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/txt_phone"
                        android:layout_marginLeft="25dp"
                        android:textSize="15sp"
                        android:textColorHint="@color/fontColor_hint"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <View
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/txt_explain"
                        android:layout_marginLeft="25dp"
                        android:textSize="15sp"
                        android:textColorHint="@color/fontColor_hint"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_gray"
                    android:gravity="center"
                    android:text="收货地址"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" />

                <LinearLayout
                    android:layout_toEndOf="@+id/txt_title"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_title">

                    <TextView
                        android:id="@+id/txt_address"
                        android:textSize="15sp"
                        android:textColorHint="@color/fontColor_hint"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>



            </RelativeLayout>

            <View
                android:layout_marginLeft="15dp"
                android:background="@color/lineColor"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_gray"
                    android:gravity="center"
                    android:text="商品清单:"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    />

                <LinearLayout
                    android:id="@+id/layout_product"
                    android:layout_marginLeft="100dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/intervalColor"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="取消理由"
                    android:textColor="@color/fontColor_gray"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_reason"
                    android:hint="请输入取消理由"
                    android:textSize="13sp"
                    android:textColorHint="@color/fontColor_support"
                    android:textColor="#333333"
                    android:gravity="top"
                    android:background="@null"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_confirm"
                android:gravity="center"
                android:text="确定取消"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/corners_orange"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

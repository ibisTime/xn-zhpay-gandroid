<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:background="@mipmap/back_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/fontColor_pink"
            android:text="店铺装修"
            android:textSize="18sp" />

    </RelativeLayout>

    <View
        android:background="@color/lineColor_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="店铺名称"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />


                <EditText
                    android:id="@+id/edt_name"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="请输入店铺名称"
                    android:textColorHint="@color/fontColor_hint"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="省/市/区(县)"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@drawable/corners_address"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_province"
                        android:gravity="center"
                        android:text="省"
                        android:textSize="13sp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/fontColor_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_city"
                        android:gravity="center"
                        android:text="市"
                        android:textSize="13sp"
                        android:textColor="@color/fontColor_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_district"
                        android:gravity="center"
                        android:text="区"
                        android:textSize="13sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/fontColor_pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_address"
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/corners_select"
                    android:layout_marginBottom="10dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@mipmap/select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="详细地址"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edt_address"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="只需输入街道门牌号"
                    android:textColorHint="@color/fontColor_hint"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="法人姓名"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edt_legal_person"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="请填写法人姓名"
                    android:textColorHint="@color/fontColor_hint"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="固定电话"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edt_bookMobile"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="固定电话(请填写区号)"
                    android:textColorHint="@color/fontColor_hint"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="手机号码"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edt_smsMobile"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="手机号码"
                    android:maxLength="11"
                    android:textColorHint="@color/fontColor_hint"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="推荐人手机号"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edt_referrer"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="推荐人手机号码"
                    android:maxLength="11"
                    android:textColorHint="@color/fontColor_hint"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontColor_pink"
                    android:text="广告语"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/edt_slogan"
                    android:textSize="15sp"
                    android:background="@null"
                    android:hint="请简单描述自己的店铺"
                    android:textColorHint="@color/fontColor_hint"
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View
                android:background="@color/lineColor_gray"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <View
                android:background="@color/pink"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <FrameLayout
                    android:id="@+id/layout_advPic"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:background="@mipmap/store_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="店铺封面"
                            android:textSize="12sp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/fontColor_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="建议尺寸690*280(px)"
                            android:textSize="12sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/fontColor_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_cover"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </FrameLayout>

                <View
                    android:background="@color/pink"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/layout_gps"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@mipmap/gps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_gps"
                        android:text="Lng:0  Lat:0"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/pink"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <LinearLayout
                    android:id="@+id/layout_deal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@mipmap/signed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="签约信息"
                        android:textSize="12sp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="@color/pink"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:id="@+id/layout_type"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:background="@mipmap/industry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_type"
                        android:text="无实体店,可选择网站"
                        android:textSize="12sp"
                        android:layout_marginTop="14dp"
                        android:textColor="@color/fontColor_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/pink"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_pink"
                        android:gravity="center"
                        android:text="使用抵扣券分成比例"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                    <View
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <TextView
                        android:layout_marginLeft="15dp"
                        android:textSize="15sp"
                        android:textColor="@color/fontColor_pink"
                        android:gravity="center"
                        android:text="不使用抵扣券分成比例"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp" />

                    <View
                        android:layout_marginLeft="15dp"
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/txt_use"
                            android:layout_marginLeft="25dp"
                            android:textSize="15sp"
                            android:text="1"
                            android:background="@null"
                            android:inputType="number"
                            android:textColorHint="@color/fontColor_support"
                            android:textColor="@color/fontColor_gray"
                            android:gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp" />

                        <TextView
                            android:text="%"
                            android:textSize="15sp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/fontColor_gray"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                    <View
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/txt_nonuse"
                            android:layout_marginLeft="25dp"
                            android:textSize="15sp"
                            android:text="10"
                            android:background="@null"
                            android:inputType="number"
                            android:textColorHint="@color/fontColor_support"
                            android:textColor="@color/fontColor_gray"
                            android:gravity="center_vertical|right"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp" />

                        <TextView
                            android:text="%"
                            android:textSize="15sp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/fontColor_gray"
                            android:gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                    <View
                        android:background="@color/lineColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingTop="18dp"
                android:text="店铺详述"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_detail"
                android:hint="请就关于您的店铺做一些20字以上60字以内的简单描述"
                android:gravity="top"
                android:padding="0dp"
                android:layout_margin="15dp"
                android:textSize="13sp"
                android:background="@null"
                android:maxLength="60"
                android:layout_width="match_parent"
                android:layout_height="94dp"/>

            <LinearLayout
                android:layout_marginTop="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_add"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/add_img"
                    android:layout_width="77dp"
                    android:layout_height="77dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_centerVertical="true"
                    android:scrollbars="none"
                    >
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_marginTop="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_marginLeft="15dp"
                    android:background="@mipmap/warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    android:layout_toRightOf="@+id/imageView"
                    android:text="添加店铺详情图片,最少一张,最多三张"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="10sp"
                    android:layout_marginTop="3dp"
                    android:layout_alignStart="@+id/textView"
                    android:layout_below="@+id/textView"
                    android:text="建议尺寸:横向690px,纵向无限制,单张图片质量1M以内"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_confirm"
                android:gravity="center"
                android:background="@drawable/corners_bottom"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp" >

                <TextView
                    android:textColor="@color/fontColor_white"
                    android:textSize="11sp"
                    android:text="本店已阅读签约协议,清楚并理解全部信息条款"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="2dp"
                    android:textColor="@color/fontColor_white"
                    android:textSize="11sp"
                    android:text="承诺遵守各项法律法规在此平台合法经营"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
